{
  "compilerOptions": {
    "outDir": "./dist",
    "lib": ["es2023", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2023",
    "declaration": true,
    "declarationMap": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "sourceMap": false,
    "strict": true,
    "types": [],
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
